<%- include('../header'); %>
	<!-- BEGIN breadcrumb -->
	<ol class="breadcrumb float-xl-end">
		<li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
		<li class="breadcrumb-item active">출금 신청</li>
	</ol>
	<!-- END breadcrumb -->
	<!-- BEGIN page-header -->
	<h1 class="page-header mb-3">출금 신청</h1>
	<!-- END page-header -->

	<div class="row">
		<div class="col">
			<div class="panel panel-inverse">
				<div class="panel-heading">
					<h4 class="panel-title"><i class="fa fa-key me-1"></i> 출금 신청</h4>
				</div>
				<div class="panel-body">
					<form role="form" method="post">
						<input type="hidden" name="minUSDT" value="<%=minUSDT%>">
						<input type="hidden" name="maxUSDT" value="<%=maxUSDT%>">
						<input type="hidden" name="balance" value="<%=wallet.f_balance%>">
						<div class="mb-3">
							<div class="row mb-15px">
								<label class="form-label col-form-label col-md-3">Token</label>
								<div class="col-sm-9">
									<input type="text" name="token" class="form-control-plaintext" value="<%=wallet.f_token%>" readonly>
								</div>
							</div>
							<div class="row mb-15px">
								<label class="form-label col-form-label col-md-3">Network</label>
								<div class="col-sm-9">
									<input type="text" name="network" class="form-control-plaintext" value="<%=wallet.f_tnetwork%>" readonly>
								</div>
							</div>
						</div>
						<div class="row mb-15px">
							<label class="form-label col-form-label col-md-3">지갑주소</label>
							<div class="col-sm-9">
								<input class="form-control-plaintext" type="text" name="address" value="<%=wallet.f_taddress%>" readonly/>
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label">금액</label>
							<div class="input-group mb-1">
								<input type="number" class="form-control" name="amount" id="amount">
								<button type="button" class="btn btn-default" onclick="pwUtils.setMaxAmount(this.form);">MAX</button>
							</div>
							<div>잔액: <%-helper.setFormatNumberWithPlacesSmall(wallet.f_balance, 2, true)%></div>
						</div>
						<hr>
						<div>
							* 최소 출금액 <%=minUSDT%> USDT, 최대 출금액 <%=maxUSDT%> USDT 입니다
						</div>
						<hr>
						<div class="text-center">
							<button type="button" class="btn btn-green w-100" onclick="pwUtils.do_request_withdrawal(this.form);">저장</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<%- include('../footer'); %>