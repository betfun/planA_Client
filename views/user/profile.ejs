<%- include('../header'); %>
	<!-- BEGIN breadcrumb -->
	<ol class="breadcrumb float-xl-end">
		<li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
		<li class="breadcrumb-item active">Profile</li>
	</ol>
	<!-- END breadcrumb -->
	<!-- BEGIN page-header -->
	<h1 class="page-header mb-3">Profile</h1>
	<!-- END page-header -->

	<div class="row">
		<div class="col-xl-6">
			<div class="panel panel-inverse">
				<!-- <div class="panel-heading">
					<h4 class="panel-title">Profile</h4>
				</div> -->
				<div class="panel-body">
					<div class="user-profile">
						<div class="d-flex flex">
							<a href="javascript:;" class="w-60px">
								<img src="/assets/img/user/user-6.jpg" alt="" class="mw-100 rounded-pill">
							</a>
							<div class="flex-1 ps-3">
								<label class="badge user-status"></label>
								<h5 class="mt-3">
									<%=user.f_email%>
								</h5>
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label">Referral</label>
							<input class="form-control" type="text" value="<%=user.f_referral%>" disabled />
						</div>
						<div class="mb-3">
							<label class="form-label">Grade</label>
							<input class="form-control" type="text" value="<%=user.f_grade%>" disabled />
						</div>
						<div class="mb-3">
							<label class="form-label">누적 수수료</label>
							<input class="form-control" type="text" value="<%=user.f_sumfee%>" disabled />
						</div>
						<div class="mb-3">
							<label class="form-label">롤업 커미션</label>
							<input class="form-control" type="text" value="<%=user.f_sumcoms%>" disabled />
						</div>
						<div class="mb-3">
							<label class="form-label">등록일</label>
							<input class="form-control" type="text" value="<%=user.f_regAt%>" disabled />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>



	<script>
		window.addEventListener('DOMContentLoaded', (event) => {
			let status = <%-user.f_status%>;

			let userStatus = $('.user-status');
			//(0 : 미등록, 1: 활성, 2:비활성, 90:탈퇴)
			switch( status ) {
				case 0:
					userStatus.addClass('bg-dark');
					userStatus.text('미등록');
					break;
				case 1:
					userStatus.addClass('bg-success');
					userStatus.text('활성');
					break;
				case 2:
					userStatus.addClass('bg-warning');
					userStatus.text('비활성');
					break;
				case 99:
					userStatus.addClass('bg-secondary');
					userStatus.text('탈퇴');
					break;
			}
		});
	</script>





	<%- include('../footer'); %>