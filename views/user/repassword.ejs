<%- include('../header'); %>
	<!-- BEGIN breadcrumb -->
	<ol class="breadcrumb float-xl-end">
		<li class="breadcrumb-item"><a href="javascript:;">Home</a></li>
		<li class="breadcrumb-item active">정보 변경</li>
	</ol>
	<!-- END breadcrumb -->
	<!-- BEGIN page-header -->
	<h1 class="page-header mb-3">정보 변경</h1>
	<!-- END page-header -->

	<div class="row">
		<div class="col-xl-6">
			<div class="panel panel-inverse">
				<div class="panel-heading">
					<h4 class="panel-title"><i class="fa fa-key me-1"></i> 비밀번호 변경</h4>
				</div>
				<div class="panel-body">
					<form role="form" method="post">
						<div class="mb-3">
							<label class="form-label">새 비밀번호</label>
							<input class="form-control" type="password" name="password" />
						</div>
						<div class="mb-3">
							<label class="form-label">새 비밀번호 확인</label>
							<input class="form-control" type="password" name="repassword" />
						</div>
						<div class="text-center">
							<button type="button" class="btn btn-green w-100" onclick="cmUtils.do_modify(this.form);">저장</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<div class="col-xl-6">
			<div class="panel panel-inverse">
				<div class="panel-heading">
					<h4 class="panel-title"><i class="fa fa-wallet me-1"></i> 지갑주소 변경</h4>
				</div>
				<div class="panel-body wallet-panel-body">
					<form role="form" method="post">

						<div class="mb-3">
							<div class="row mb-15px">
								<label class="form-label col-form-label col-md-3">Token</label>
								<div class="col-sm-9">
									<input type="text" name="token" class="form-control-plaintext" value="<%=wallet.f_token%>" readonly>
								</div>
							</div>
							<div class="row mb-15px">
								<label class="form-label col-form-label col-md-3">Network</label>
								<div class="col-sm-9">
									<input type="text" name="network" class="form-control-plaintext" value="<%=wallet.f_tnetwork%>" readonly>
								</div>
							</div>
						</div>
						<div class="mb-3">
							<label class="form-label">지갑주소</label>
							<input class="form-control" type="text" name="address" value="<%=wallet.f_taddress%>" />
						</div>
						<div class="text-center">
							<button type="button" class="btn btn-green w-100" onclick="cmUtils.do_modify_wallet(this.form);">저장</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<%- include('../footer'); %>