<%- include('./header'); %>

  <div class="login login-v2 fw-bold">

    <div class="login-cover">
      <div class="login-cover-img" style="background-image: url(../assets/img/login-bg/login-bg-17.jpg)"
        data-id="login-cover-image"></div>
      <div class="login-cover-bg"></div>
    </div>


    <div class="login-container">

      <div class="login-header">
        <div class="brand">
          <small>새 비밀번호를 입력해주세요</small>
        </div>
        <div class="icon">
          <i class="fa fa-lock"></i>
        </div>
      </div>


      <div class="login-content">
        <form method="post">
          <input type="hidden" name="account" value="<%=account%>">
          <input type="hidden" name="token" value="<%=token%>">
          <div class="form-floating mb-20px">
            <input type="password" name="new_password" class="form-control fs-13px h-45px border-0" placeholder="새 비밀번호" id="new_password">
            <label for="new_password" class="d-flex align-items-center text-gray-600 fs-13px">새 비밀번호</label>
          </div>
          <div class="form-floating mb-20px">
            <input type="password" name="confirm_password" class="form-control fs-13px h-45px border-0" placeholder="새 비밀번호 확인">
            <label for="confirm_password" class="d-flex align-items-center text-gray-600 fs-13px">새 비밀번호 확인</label>
          </div>
          <div class="mb-20px">
            <button type="button" class="btn btn-theme d-block w-100 h-45px btn-lg"
              onclick="pwUtils.do_resetpassword(this.form);">확인</button>
          </div>

          <div class="text-gray-500">
            <a href="javascript:history.back();" class="text-white">뒤로</a>
          </div>
        </form>
      </div>

    </div>

  </div>

  <%- include('./footer'); %>



