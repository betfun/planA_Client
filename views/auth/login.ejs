<%- include('./header'); %>
		<!-- BEGIN login -->

		<div class="login login-v2 fw-bold">

			<div class="login-cover">
				<div class="login-cover-img" style="background-image: url(../assets/img/login-bg/login-bg-17.jpg)"
					data-id="login-cover-image"></div>
				<div class="login-cover-bg"></div>
			</div>


			<div class="login-container">

				<div class="login-header">
					<div class="brand">
						<div class="d-flex align-items-center">
							<span class="logo"></span> <b>A</b> Plan
						</div>
						<small>로그인 하세요</small>
					</div>
					<div class="icon">
						<i class="fa fa-lock"></i>
					</div>
				</div>


				<div class="login-content">
					<form method="post" id="loginForm">
						<div class="form-floating mb-20px">
							<input type="text" name="account" class="form-control fs-13px h-45px border-0" placeholder="Email Address"
								id="emailAddress">
							<label for="emailAddress" class="d-flex align-items-center text-gray-600 fs-13px">Email
								Address</label>
						</div>
						<div class="form-floating mb-20px">
							<input type="password" name="password" class="form-control fs-13px h-45px border-0" placeholder="Password">
							<label for="emailAddress" class="d-flex align-items-center text-gray-600 fs-13px">Password</label>
						</div>
						<div class="form-check mb-20px">
							<input class="form-check-input border-0" type="checkbox" value="1" id="rememberMe">
							<label class="form-check-label fs-13px text-gray-500" for="rememberMe">
								Remember Me
							</label>
						</div>
						<div class="mb-20px">
							<button type="button" class="btn btn-theme d-block w-100 h-45px btn-lg" onclick="do_login(this.form);">로그인</button>
						</div>

						<div class="text-gray-500">
							비밀번호를 잃어 버렸습니다. <a href="/auth/findpassword" class="text-white">비밀번호 찾기</a>
						</div>
					</form>
				</div>

			</div>

		</div>
	  
		<script>

			window.addEventListener('DOMContentLoaded', (event) => {

				$('input[name=account]').keyup((e)=>{
					if (e.keyCode == 13) {
						$('input[name=password').focus();
					}
				});

				$('input[name=password').keyup((e)=>{
					
					if (e.keyCode == 13) {
						do_login(e.currentTarget.form);
					}
				});

			});

			function do_login(f) {

				let target = f.closest('.login-container');
				pwUtils.showLoading(target);

				pwUtils.ajaxJSON(
					'/auth/login', 
					$(f).serialize(), 
					(data) => {          
						switch(data['result']) {
							case 100:
								location.href = '<%=path ?? '/'%>';
								return;
								break;
							case 201:
								alert('아이디, 비밀번호를 확인해주세요.');              
								break;
							default:
								alert('잘못된 접근 입니다.');
								break;
						}                  
						pwUtils.hideLoading(target);  
					},
					(j) => {
						pwUtils.hideLoading(target);
						alert('서버 에러로 로그인이 실패 하였습니다.');
					});
			}
		</script>

<%- include('./footer'); %>